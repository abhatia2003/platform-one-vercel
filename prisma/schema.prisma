generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ENUMS

enum UserRole {
  PARTICIPANT
  VOLUNTEER
  STAFF
}

enum BookingRole {
  PARTICIPANT
  VOLUNTEER
}

enum QuestionTargetRole {
  PARTICIPANT
  VOLUNTEER
}

enum QuestionType {
  TEXT
  SELECT
  MULTISELECT
}

enum LoyaltyTier {
  BRONZE
  SILVER
  GOLD
  PLATINUM
}

// MODELS

model User {
  id        String       @id @default(uuid())
  name      String
  email     String       @unique
  role      UserRole
  tier      LoyaltyTier?
  createdAt DateTime     @default(now())

  // relations
  bookings      Booking[]
  eventsCreated Event[]   @relation("CreatedEvents")
}

model Event {
  id        String      @id @default(uuid())
  name      String
  start     DateTime
  end       DateTime
  location  String
  minTier   LoyaltyTier
  createdAt DateTime    @default(now())

  // relations
  createdById String
  createdBy   User   @relation("CreatedEvents", fields: [createdById], references: [id])

  questions Question[]
  bookings  Booking[]
}

model Question {
  id         String             @id @default(uuid())
  text       String
  type       QuestionType
  options    String[]
  targetRole QuestionTargetRole

  // relations
  eventId String
  event   Event    @relation(fields: [eventId], references: [id])
  answers Answer[]
}

model Booking {
  id            String      @id @default(uuid())
  createdAt     DateTime    @default(now())
  roleAtBooking BookingRole

  // relations
  userId String
  user   User   @relation(fields: [userId], references: [id])

  eventId String
  event   Event  @relation(fields: [eventId], references: [id])

  answers Answer[]

  @@unique([userId, eventId]) // prevents double booking
}

//////////////////////////////////////////////////////

model Answer {
  id    String @id @default(uuid())
  value String

  // relations
  bookingId String
  booking   Booking @relation(fields: [bookingId], references: [id])

  questionId String
  question   Question @relation(fields: [questionId], references: [id])

  @@unique([bookingId, questionId]) // one answer per question per booking
}
